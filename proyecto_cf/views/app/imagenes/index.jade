extends ../../layout.jade
block contenido
  div
    h1 Mis Imagenes
    for imagen in imagenes
      .white.border.tr.large-padding
        .row
          .col-md-10
            h2=imagen.title
          .col-md-2
            a(href="/app/imagenes/#{imagen.id}/edit", class="right-space btn btn-success" ) Editar
            form(action="/app/imagenes/#{imagen.id}?_method=DELETE" class="link" method="POST")
              input(type="submit" class="btn btn-danger" value="Eliminar") 